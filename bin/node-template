#!/bin/bash

echo ""
git clone https://github.com/winton/node-template.git $1

if [ $? -eq 0 ]; then
  cd $1
else
  exit 1
fi

echo ""
git fetch

echo ""
npm install

echo ""
echo $'\e[1;31m'"To finish setting up your project:"
echo $'\e[0m'
echo "    cd $1"

for i in ${@:2}; do
	echo "    git merge origin/$i"
done

echo "    grunt setup"
echo ""